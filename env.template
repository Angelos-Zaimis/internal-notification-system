# Environment Configuration Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=datasource_notification
DATABASE_USERNAME=testuser
DATABASE_PASSWORD=change_me_in_production

# Database URL (constructed from above or use directly)
SPRING_DATASOURCE_URL=jdbc:postgresql://${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# HikariCP Connection Pool
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:29092
KAFKA_GROUP_ID=notification-service-group
KAFKA_AUTO_OFFSET_RESET=earliest

# Kafka Topics
KAFKA_TOPIC_NOTIFICATION_INCOMING=notification-events
KAFKA_TOPIC_NOTIFICATION_DISPATCH=notification-dispatch

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8281
SERVER_CONTEXT_PATH=/middleware-notification
SERVER_SHUTDOWN=graceful

# =============================================================================
# SECURITY & OAUTH2 CONFIGURATION
# =============================================================================
# OAuth2 Resource Server
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=https://your-auth-server.com/realms/your-realm
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_JWK_SET_URI=https://your-auth-server.com/realms/your-realm/protocol/openid-connect/certs

# Default Realm
ISSUER_DEFAULT_REALM=quarkus

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Notification Settings
NOTIFICATIONS_SCHEDULE_INTERVAL_MILLISECONDS=5000
NOTIFICATIONS_RETRY_MAX_ATTEMPTS=3

# JPA Settings
JPA_FALLBACK_PROVIDER_ID=0b46ef15-57ee-402a-a54e-1df9e5dc50d3

# =============================================================================
# FLYWAY CONFIGURATION
# =============================================================================
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_CLEAN_DISABLED=true
SPRING_FLYWAY_OUT_OF_ORDER=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_NOTIFICATION=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=WARN
LOGGING_LEVEL_ORG_HIBERNATE=WARN

LOGGING_FILE_PATH=./logs
LOGGING_FILE_NAME=notification-service

# =============================================================================
# ACTUATOR & MONITORING
# =============================================================================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
SPRING_PROFILES_ACTIVE=local
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_PORT=35719

# =============================================================================
# JVM CONFIGURATION
# =============================================================================
JAVA_OPTS=-Xmx1024m -Xms512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=notification-service

